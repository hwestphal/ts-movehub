{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug TS",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${file}"
            ],
            "env": {
                "TS_NODE_FILES": "true"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229,
            "sourceMaps": true
        }
    ]
}
